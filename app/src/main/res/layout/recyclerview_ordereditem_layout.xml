<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerview_ordereditem_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="18dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/recyclerview_ordereditem_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_marginEnd="2dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/recyclerview_ordereditem_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/fontBlack"
        android:textSize="@dimen/text"
        android:layout_marginEnd="6dp"/>
    <TextView
        android:id="@+id/recyclerview_ordereditem_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/fontBlack"
        android:textSize="@dimen/text"
        android:layout_marginEnd="6dp"/>
    <TextView
        android:id="@+id/recyclerview_ordereditem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/fontBlack"
        android:textSize="@dimen/text"/>
</LinearLayout>