<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerview_order_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp"
    android:animateLayoutChanges="true"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start|center">
        <ImageView
            android:id="@+id/recyclerview_order_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginEnd="2dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/recyclerview_order_item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/fontBlack"
            android:textSize="@dimen/text"
            android:layout_marginEnd="6dp"/>
        <TextView
            android:id="@+id/recyclerview_order_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/fontBlack"
            android:textSize="@dimen/text"
            android:layout_marginEnd="6dp"/>
        <TextView
            android:id="@+id/recyclerview_order_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/fontBlack"
            android:textSize="@dimen/text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end|center">
        <TextView
            android:id="@+id/recyclerview_order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/fontBlack"
            android:textSize="@dimen/text"
            android:layout_marginEnd="14dp"/>
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/recyclerview_order_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"/>
    </LinearLayout>
</FrameLayout>