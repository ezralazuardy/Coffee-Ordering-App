<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:padding="28dp"
    android:background="@color/resultActivityBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:ignore="UselessParent"
        android:animateLayoutChanges="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/result_topcard"
            android:padding="12dp">
            <TextView
                android:id="@+id/result_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/fontWhite"
                android:textStyle="bold"
                android:textSize="@dimen/textBig"
                android:text="@string/result_text_title"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/result_bottomcard"
            android:animateLayoutChanges="true"
            android:padding="12dp">
            <LinearLayout
                android:id="@+id/result_layout_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/result_text_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_gravity="start"
                    android:textColor="@color/fontBlack"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSmall"
                    android:layout_marginBottom="12dp"
                    android:animateLayoutChanges="true"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_order_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="@color/fontDarkGray"
                        android:textStyle="bold"
                        android:textSize="@dimen/textSmall"
                        android:text="@string/result_text_totalitem"/>
                    <TextView
                        android:id="@+id/result_text_totalitem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="@color/fontDarkGray"
                        android:textStyle="bold"
                        android:textSize="@dimen/textSmall"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/result_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_gravity="start|center"
                            android:fontFamily="@font/nunito_bold"
                            android:textColor="@color/fontBlack"
                            android:textSize="@dimen/text"
                            android:text="@string/result_text_orderfor"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_gravity="start|center"
                            android:fontFamily="@font/nunito_semibold"
                            android:textColor="@color/fontBlack"
                            android:textSize="@dimen/text"
                            android:text="@string/result_text_table_separator"/>
                        <TextView
                            android:id="@+id/result_text_orderfor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/result_totalprice"
                            android:padding="10dp"
                            android:fontFamily="@font/nunito_semibold"
                            android:textColor="@color/fontWhite"
                            android:textSize="@dimen/text"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_gravity="start|center"
                            android:fontFamily="@font/nunito_bold"
                            android:textColor="@color/fontBlack"
                            android:textSize="@dimen/text"
                            android:text="@string/result_text_totalprice"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_gravity="start|center"
                            android:fontFamily="@font/nunito_semibold"
                            android:textColor="@color/fontBlack"
                            android:textSize="@dimen/text"
                            android:text="@string/result_text_table_separator"/>
                        <TextView
                            android:id="@+id/result_text_totalprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:background="@drawable/result_totalprice"
                            android:padding="10dp"
                            android:fontFamily="@font/nunito_semibold"
                            android:textColor="@color/fontWhite"
                            android:textSize="@dimen/text"/>
                    </TableRow>
                    <TextView
                        android:id="@+id/result_text_taxtinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="@color/fontDarkGray"
                        android:textSize="@dimen/textSmall2"/>
                </TableLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/result_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="@color/fontBlack"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSmall"
                    android:text="@string/result_text_body_confirmedorder"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                style="?android:attr/buttonBarStyle">
                <Button
                    android:id="@+id/btn_result_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSmall"
                    android:fontFamily="@font/nunito_bold"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:drawableStart="@drawable/ic_accept_green"
                    android:drawablePadding="4dp"
                    android:text="@string/dialog_btn_confirm"/>
                <Button
                    android:id="@+id/btn_result_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSmall"
                    android:fontFamily="@font/nunito_bold"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/fontRed"
                    android:drawableStart="@drawable/ic_close_red"
                    android:drawablePadding="4dp"
                    android:animateLayoutChanges="true"
                    android:text="@string/dialog_btn_cancel"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>